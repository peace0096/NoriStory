<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background" />

    <FrameLayout
        android:id="@+id/PainterView"
        android:layout_width="251dp"
        android:layout_height="333dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        app:layout_constraintVertical_bias="0.40">
    </FrameLayout>

    <ImageButton
        android:id="@+id/saveBtn"
        android:layout_width="132dp"
        android:layout_height="97dp"
        android:backgroundTint="#00FFFFFF"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_savebtn" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="81dp"
        android:layout_height="31dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Buttonlayout"
        app:layout_constraintStart_toStartOf="@+id/Buttonlayout"
        app:layout_constraintEnd_toEndOf="@+id/Buttonlayout"
        app:layout_constraintHorizontal_bias="0.39">

        <ImageView
            android:id="@+id/BackBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/card_backbtn" />

        <ImageView
            android:id="@+id/RePlayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            app:srcCompat="@drawable/card_replaybtn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Buttonlayout"
        android:layout_width="192dp"
        android:layout_height="373dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.8">

        <ImageButton
            android:id="@+id/eraserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/eraser1" />

        <ImageButton
            android:id="@+id/pencilBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/pencil2" />

        <ImageButton
            android:id="@+id/penBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"

            app:srcCompat="@drawable/pen2" />

        <ImageButton
            android:id="@+id/crayongBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#00FFFFFF"

            app:srcCompat="@drawable/crayong0" />

        <ImageButton
            android:id="@+id/plusBtn"
            android:layout_width="71dp"
            android:layout_height="56dp"
            android:backgroundTint="#00FFFFFF"
            android:layout_marginLeft="60dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/card_plusbtn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Colorlayout"
        android:layout_width="176dp"
        android:layout_height="387dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/White"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong11" />

        <ImageButton
            android:id="@+id/Magenta"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong10" />

        <ImageButton
            android:id="@+id/Purple"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong9" />

        <ImageButton
            android:id="@+id/Blue"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong8" />

        <ImageButton
            android:id="@+id/SkyBlue"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong7" />

        <ImageButton
            android:id="@+id/Green"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong6" />

        <ImageButton
            android:id="@+id/LightGreen"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong5" />

        <ImageButton
            android:id="@+id/Yellow"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong4" />

        <ImageButton
            android:id="@+id/LightOrange"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong3" />

        <ImageButton
            android:id="@+id/Orange"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong2" />

        <ImageButton
            android:id="@+id/Red"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginVertical="5dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/crayong1" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>