<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/optinal"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/optinal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <Button
        android:id="@+id/subject_type"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:background="@drawable/subject"
        app:layout_constraintBottom_toBottomOf="@+id/optinal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/optinal" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="30dp"
        android:text="선택형 이야기 창작"
        app:layout_constraintBottom_toTopOf="@+id/optinal"
        app:layout_constraintEnd_toEndOf="@+id/optinal" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="30dp"
        android:text="소재형 이야기 창작"
        app:layout_constraintBottom_toTopOf="@+id/subject_type"
        app:layout_constraintEnd_toEndOf="@+id/subject_type" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="9세 이하 친구들에게 추천"
        app:layout_constraintEnd_toEndOf="@+id/optinal"
        app:layout_constraintTop_toBottomOf="@+id/optinal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="150dp"
        android:layout_height="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="9세 이상 친구들에게 추천"
        app:layout_constraintEnd_toEndOf="@+id/subject_type"
        app:layout_constraintTop_toBottomOf="@+id/subject_type" />
</androidx.constraintlayout.widget.ConstraintLayout>